#include <WiFi.h>
#include <WiFiClientSecure.h>
#include <PubSubClient.h>
#include <ArduinoJson.h>
#include <HTTPClient.h>

// --- WIFI & EMQX CONFIG ---
const char* ssid = "aayushgelal_2";
const char* password = "CLB43A66DA";

// Your EMQX Serverless Address
const char* mqtt_server = "i6ff160f.ala.asia-southeast1.emqxsl.com";
const int mqtt_port = 8883; 
const char* mqtt_user = "aayushgelal"; 
const char* mqtt_pass = "aayushgelal";

// Next.js API URL (Replace with your actual deployment or ngrok URL)
const char* nextjs_api = "http://192.168.1.64:3000/api/payments/initiate";
const char* device_id = "HB-SOUNDBOX-01";

WiFiClientSecure espClient;
PubSubClient client(espClient);

float totalAmount = 0;
String currentInput = "";

void setup() {
  Serial.begin(115200);
  
  // Connect WiFi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) { delay(500); Serial.print("."); }
  Serial.println("\nWiFi Connected!");

  // Setup Secure MQTT (Skips CA check for rapid prototyping)
  espClient.setInsecure();
  client.setServer(mqtt_server, mqtt_port);
  client.setCallback(callback);

  Serial.println("\n--- SIMULATED CALCULATOR ---");
  Serial.println("Commands: [Number] to type, [+] to add, [=] to Pay");
}

void callback(char* topic, byte* payload, unsigned int length) {
  StaticJsonDocument<512> doc;
  deserializeJson(doc, payload, length);

  if (doc.containsKey("qrString")) {
    Serial.println("\n[DISPLAY]: Generating QR Code...");
    Serial.println("QR DATA: " + doc["qrString"].as<String>());
    Serial.println("PLEASE SCAN TO PAY: NPR " + String(doc["amount"].as<float>()));
  }

  if (doc.containsKey("action") && doc["action"] == "PLAY_AUDIO") {
    Serial.println("\n[SOUNDBOX]: SUCCESS! Received " + String(doc["amount"].as<float>()) + " Rupees.");
    totalAmount = 0; // Reset after payment
  }
}

void loop() {
  if (!client.connected()) reconnect();
  client.loop();

  // SIMULATE CALCULATOR INPUT via Serial Monitor
  if (Serial.available()) {
    char ch = Serial.read();
    if (isDigit(ch)) {
      currentInput += ch;
      Serial.print(ch);
    } else if (ch == '+') {
      totalAmount += currentInput.toFloat();
      currentInput = "";
      Serial.print(" + ");
    } else if (ch == '=') {
      totalAmount += currentInput.toFloat();
      Serial.println("\nTOTAL: " + String(totalAmount));
      sendToNextJS(totalAmount);
      currentInput = "";
    }
  }
}

void sendToNextJS(float amt) {
  HTTPClient http;
  http.begin(nextjs_api);
  http.addHeader("Content-Type", "application/json");
  
  String json;
  StaticJsonDocument<200> req;
  req["amount"] = amt;
  req["deviceId"] = device_id;
  serializeJson(req, json);

  int code = http.POST(json);
  Serial.println(code > 0 ? "Request sent to Next.js..." : "HTTP Error!");
  http.end();
}

void reconnect() {
  while (!client.connected()) {
    if (client.connect(device_id, mqtt_user, mqtt_pass)) {
      client.subscribe("devices/HB-SOUNDBOX-01/display");
      client.subscribe("devices/HB-SOUNDBOX-01/audio");
    } else {
      delay(5000);
    }
  }
}